# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

# 4 space indentation
[*.py]
max_line_length = 80
indent_style = space
indent_size = 4

[*.md]
indent_size = 2
indent_style = space
